#include<iostream>

using namespace std;

int main() {
    int arr[3][3];
    int sum;
    int count;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            cin >> arr[i][j];
        }
    }
    for (int i = 0; i < 3; i++) {
        count = 0; sum = 0;
        for (int j = 0; j < 3; j++) {
            if (arr[i][j] % 2 == 0) {
                ++count;
            }
            else {
                sum += arr[i][j];
            }
           
        }
        cout << count <<  " " << sum;
        cout << endl;
    }
    

    
    


    
   

    return 0;
}
