#include<iostream>
using namespace std;

int main() {
    int n;
    cin >> n;
    int a[1000];
    int count = 0;
    int sum = 0;
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    for (int i = 0; i < n; i++) {
        if (a[i] % 2 == 0) {
            ++count;
        }
        else {
            sum += a[i];
        }
    }
    cout << count << " " << sum;

}
